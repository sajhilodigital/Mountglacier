# ==========================================
# Node.js / Express.js Backend .gitignore
# ==========================================

# --- Node Modules ---
node_modules/
jspm_packages/

# --- Logs & Debug Files ---
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# --- Environment Variables ---
.env
.env.local
.env.*.local

# --- Build / Distribution ---
dist/
build/
tmp/
temp/

# --- OS Specific Files ---
# macOS
.DS_Store
.AppleDouble
.LSOverride

# Windows
Thumbs.db
ehthumbs.db
Desktop.ini

# Linux
*~

# --- IDE & Editor Folders ---
.vscode/
.idea/
*.swp

# --- Coverage & Testing ---
coverage/
.nyc_output/
jest/
test-results/

# --- Database & Cache ---
data/
*.sqlite
*.sqlite3
*.db
*.sql
dump.rdb

# --- Uploads (if you store locally, better to use S3 or Cloud Storage) ---
uploads/
storage/

# --- PM2 Logs & Process Files ---
pids/
*.pid
*.seed
*.pid.lock

# --- Dependency Caches ---
.npm/
.yarn/
.pnpm-store/

# --- Lock Files (Optional - if using pnpm or yarn) ---
package-lock.json
yarn.lock
pnpm-lock.yaml

# --- Optional: Ignore scripts or documentation ---
scripts/
docs/

# --- Sensitive Files ---
config/*.json
secret.key
private.key
